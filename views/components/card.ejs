<a href="/playgrounds/<%=playground._id%>">
    <div class="card hover:shadow-lg cursor-pointer">
        <img src="<%=playground.image %>" alt="playground image" class="w-full h-32 sm:h-48 object-cover" />
        <div class="m-4">
            <span class="font-bold ">
                <%=playground.title %>
            </span>
            <span class="block text-gray-500">
                <%=playground.location %>
            </span>
        </div>
        <div class="badge flex items-center">
            <span class="pr-1">
                <%=playground.likes %>

            </span>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 text-primary" fill="none" viewBox="0 0 24 24"
                stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
            </svg>
        </div>
    </div>
</a>