<% layout('layouts/boilerplate')%>

    </li>
    <div class="mt-12 max-w-7xl mx-auto grid grid-cols-5 gap-5">
        <div class="card col-span-3">
            <div class="bg-rose-300">


                <%if(playground.image) {%>
                    <img class="object-cover w-full" alt="playground image" src="<%=playground.image%>">
                    <% }else {%>
                        <img class="object-cover w-full " alt="playground image"
                            src="https://res.cloudinary.com/douqbebwk/image/upload/v1600103881/YelpCamp/lz8jjv2gyynjil7lswf4.png">
                        <% } %>
            </div>
            <div class=" mb-8 px-3">

                <div class="">
                    <h5 class="text-gray-800 font-bold mt-8 text-xl">
                        <%= playground.title%>
                    </h5>
                    <p class="text-sm mt-3">
                        <%= playground.description%>
                    </p>
                </div>
                <div class="mt-3 ">
                    <p class="mt-3">
                        <%= playground.location%>
                    </p>
                    <div class="mt-3">
                        
                        <p class="font-bold text-gray-700"><%= playground.author.username%></p>
                    </div>
                    
                    <p class=" flex content-center mt-3">
                        <%if(playground.image) {%>
                            <%=playground.likes %>
                                <%}else{%>
                                    0
                                    <%}%>
                                        <svg xmlns="http://www.w3.org/2000/svg"
                                            class="h-5 w-5 text-primary ml-3 inline-block" fill="none"
                                            viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                                        </svg>
                                    </p>
                </div>

                <% if(currentUser && playground.author.equals(currentUser._id)){%>
                <div class="flex justify-between mt-3 ">
                    <a class="btn text-primary border-primary md:border-2 hover:bg-primary hover:text-gray-100 transition ease-out duration-500"
                        href="/playgrounds/<%=playground._id%>/edit">Edit</a>
                    <form class="d-inline" action="/playgrounds/<%=playground._id%>?_method=DELETE" method="POST">
                        <button
                            class="btn text-white bg-primary md:border-2 hover:bg-white hover:text-primary border-primary transition ease-out duration-500">Delete</button>
                    </form>
                </div>
                <% } %>
                <div class="text-gray-600 text-sm mt-3 ">
                    2 days ago
                </div>
            </div>

        </div>
        <div class="col-span-2 ">

        
        <div class="card px-3 py-5">
            <h3 class="font-bold text-xl ">Leave a review</h3>

            <form action="/playgrounds/<%=playground.id%>/reviews" method="POST" class="mt-3">
                <div class="mt-3">
                    <label for="rating" class="">Rating</label>
                    <input type="range" min="1" max="5" name="review[rating]" id="rating">
                </div>
                <label for="body">Review</label>
                <textarea
                    class="w-full px-3 py-2 text-gray-700  border shadow-sm rounded-lg focus:ring-indigo-500 focus:border-indigo-500 mt-3"
                    rows="2" name="review[body]" id="body"></textarea>
                <button class="btn bg-blue-600 text-white mt-3">Submit</button>
            </form>

        </div>
        <% for(let review of playground.reviews) { %>
            <div class="card px-3 py-2 mt-2 text-sm">
                <div class="">
                    <h5 class="mt-3">Rating: <%= review.rating %>
                    </h5>
                    <p class="mb-3">Review: <%= review.body %>
                    </p>
                    <div class="flex justify-between mt-3 ">
                        <a class="btn text-primary border-primary md:border-2 hover:bg-primary hover:text-gray-100 transition ease-out duration-500"
                            href="/playgrounds/<%=playground._id%>/edit">Edit</a>
                        <form class="d-inline" action="/playgrounds/<%=playground._id%>/reviews/<%=review._id%>?_method=DELETE" method="POST">
                            <button
                                class="btn text-white bg-primary md:border-2 hover:bg-white hover:text-primary border-primary transition ease-out duration-500">Delete</button>
                        </form>
                    </div>
                    <div class="text-gray-600 text-xs mt-2 ">
                        2 days ago
                    </div>
                </div>
            </div>
            <% } %>
        </div>

    </div>