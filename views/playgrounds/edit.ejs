<% layout('layouts/boilerplate')%>

<h1>Edit Playgrounds</h1>
<form action="/playgrounds/<%=playground._id%>?_method=PUT" method="POST">
    <div>
        <label for="title">Title</label>
        <input type="text" id="title" name="playground[title]" value="<%=playground.title %>">
    </div>
    <div>
        <label for="location">Location</label>
        <input type="text" id="location" name="playground[location]" value="<%= playground.location%>">
    </div>
    <button>Update Campground</button>
</form>
<a href="/playgrounds/<%= playground._id%>">Back To Playground</a>