<% layout('layouts/boilerplate')%>
<div><a href="/playgrounds/new"> Add playground</a></div>

<% for (let playground of playgrounds){%>
    <div class="card mt-3">
        <div class="row">
            <div class="col-md-4">
                <!-- <img class="img-fluid" alt="" src="<%=playground.image%>"> -->
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= playground.title %> </h5>
                    <p class="card-text"><%= playground.description %></p>
                    <p class="card-text">
                        <small class="text-muted"><%= playground.location%></small>
                    </p>
                    <a class="btn btn-primary" href="/playgrounds/<%=playground._id%>">View <%=playground.title%></a>
                </div>
            </div>
        </div>
    </div>
    <% }%>